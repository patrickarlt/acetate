{
  "name": "acetate",
  "description": "A layout and templating framework for static websites.",
  "version": "1.0.0",
  "author": "Patrick Arlt <patrick.arlt@gmail.com> (https://patrickarlt.com/)",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "bugs": {
    "url": "https://github.com/patrickarlt/acetate/issues/"
  },
  "dependencies": {
    "async": "^1.5.2",
    "browser-sync": "^2.12.10",
    "chalk": "^1.1.3",
    "chokidar": "^1.5.1",
    "common-tags": "^1.2.0",
    "es6-promisify": "^4.1.0",
    "glob": "^7.0.3",
    "highlight.js": "^9.4.0",
    "js-yaml": "^3.6.1",
    "lodash": "^4.13.1",
    "markdown-it": "^6.0.5",
    "mime": "^1.3.4",
    "mkdirp": "^0.5.1",
    "node-uuid": "^1.4.7",
    "normalize-newline": "^2.0.0",
    "normalize-url": "^1.5.2",
    "nunjucks": "^2.4.2",
    "pretty-hrtime": "^1.0.2"
  },
  "devDependencies": {
    "ava": "^0.15.1",
    "babel": "^6.5.2",
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "codeclimate-test-reporter": "^0.3.2",
    "coveralls": "^2.11.9",
    "eslint": "^2.11.1",
    "eslint-config-semistandard": "^6.0.2",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.2",
    "eslint-plugin-react": "^5.1.1",
    "eslint-plugin-standard": "^1.3.2",
    "gh-release": "^2.0.3",
    "husky": "^0.11.4",
    "ncp": "^2.0.0",
    "node-mocks-http": "^1.5.2",
    "nyc": "^6.4.4",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.4"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "homepage": "https://acetate.io",
  "keywords": [
    "site",
    "static",
    "template",
    "templating"
  ],
  "license": "MIT",
  "main": "lib/Acetate.js",
  "nyc": {
    "exclude": [
      ".acetate_fixtures",
      "test/**/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:patrickarlt/acetate.git"
  },
  "scripts": {
    "lint": "eslint lib test",
    "lint:fix": "eslint lib test --fix",
    "prepublish": "npm test",
    "release": "npm publish && gh-release",
    "pretest": "npm run lint",
    "test": "ava test/*.test.js",
    "test:coverage": "npm run lint && nyc --require babel-register ava test/*.test.js --reporter=html",
    "precommit": "npm run lint",
    "prepush": "npm test"
  }
}
